<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="3dp"
    >

    <TextView
        android:id="@+id/tv_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_iron_ribbon"
        android:text="Maintanance"
        android:textColor="@color/grey_dark"
        android:layout_marginBottom="3dp"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_make_n_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_skill"
        android:layout_toLeftOf="@id/iv_iron_ribbon"
        android:text="FUNC 342SKdf/sdfssd"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="@string/view"
        android:textColor="@color/orange"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/iv_gold_ribbon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/btn_view"
        android:src="@drawable/icon_gold_ribbon" />

    <ImageView
        android:id="@+id/iv_silver_ribbon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/iv_gold_ribbon"
        android:src="@drawable/icon_silver_ribbon" />

    <ImageView
        android:id="@+id/iv_iron_ribbon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/iv_silver_ribbon"
        android:src="@drawable/icon_blue_ribbon" />

</RelativeLayout>