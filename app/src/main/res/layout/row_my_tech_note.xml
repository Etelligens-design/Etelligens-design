<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_note"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_tech_note" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@id/iv_info"
            android:layout_toRightOf="@id/iv_note"
            android:maxLines="2"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/iv_download"
            android:layout_toRightOf="@id/iv_note"
            android:text="2020-10-10 12:09:22"
            android:textColor="@color/grey_dark"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_info_symbol_white" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/iv_delete"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_download" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/iv_info"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_delete" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>